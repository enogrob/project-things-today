FROM ruby:2.3.1
MAINTAINER Roberto Nogueira <roberto.nogueira@atlanticsolutions.com.br>

# Install dependencies.
RUN apt-get update \
  # build-essential
  && apt-get install -y build-essential \
  # nodejs and npm
  && curl -sL https://deb.nodesource.com/setup_4.x | bash \
  && apt-get install -yq nodejs \
  # postgresql
  && apt-get install -y libpq-dev \
  # capybara-webkit
  && apt-get install -y libqt4-dev libqtwebkit-dev \
  # rmagick
  && apt-get install -y imagemagick libmagickwand-dev \
  # cleanup
  && apt-get clean \
  && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# Deploy Rails App.
WORKDIR /usr/src/app
COPY . ./
COPY sample.env .env
RUN gem install bundler && bundle config git.allow_insecure true && bundle install && npm install