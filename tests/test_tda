test_01_tda_should_go_to_and_list_Areas() {
    source ~/.todayrc    
    
    things areas > /dev/null
    assert_equals "$AREAS" "$PWD"
}

test_02_tdai_should_create_link_in_Areas() {
    source ~/.todayrc
    if [ -d "$PROJECTS/project-test" ]; then rm -Rf $PROJECTS/project-test; fi
    if [ -L "$TODAY/project-test" ]; then rm -f $TODAY/project-test; fi  
    if [ -L "$TODAY/$AREA" ]; then rm -f $TODAY/$AREA; fi       
    
    things projects new project-test > /dev/null
    things areas start rails > /dev/null
    assert "test -L $TODAY/$AREA"
}

test_03_tdae_should_remove_link_in_Areas() {
    source ~/.todayrc
    if [ -d "$PROJECTS/project-test" ]; then rm -Rf $PROJECTS/project-test; fi
    if [ -L "$TODAY/project-test" ]; then rm -f $TODAY/project-test; fi  
    if [ -L "$TODAY/$AREA" ]; then rm -f $TODAY/$AREA; fi       
    
    things projects new project-test > /dev/null
    things areas start rails > /dev/null
    things areas stop > /dev/null
    assert "! test -L $TODAY/$AREA"
}

# Change to directory where bash_unit so
# that we can use our scripts under test
# more easily

cd $(dirname $0)