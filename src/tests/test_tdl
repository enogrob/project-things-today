#        
#    things logbook list > /dev/null
#}

test_03_tdai_should_create_link_in_Logbook() {
    source ~/.todayrc
    if [ -d "$PROJECTS/project-test" ]; then rm -Rf $PROJECTS/project-test; fi
    if [ -L "$LOGBOOK/project-test" ]; then rm -f $LOGBOOK/project-test; fi  
    
    things projects new project-test > /dev/null
    things logbook start > /dev/null
    assert "test -L $LOGBOOK/$PROJECT"
}

test_04_tdae_should_remove_link_in_Logbook() {
    source ~/.todayrc
    if [ -d "$PROJECTS/project-test" ]; then rm -Rf $PROJECTS/project-test; fi
    if [ -L "$LOGBOOK/project-test" ]; then rm -f $LOGBOOK/project-test; fi    
    
    things projects new project-test > /dev/null
    things logbook start > /dev/null
    things logbook stop > /dev/null
    assert "! test -L $LOGBOOK/$PROJECT"
    
    if [ -d "$PROJECTS/project-test" ]; then rm -Rf $PROJECTS/project-test; fi
}

# Change to directory where bash_unit so
# that we can use our scripts under test
# more easily

cd $(dirname $0)