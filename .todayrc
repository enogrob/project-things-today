            else
                SCHEDULED=$SCHEDULED"   |"; 
            fi                                            
            if [[ "$PROJTAGS" =~ "fri" ]];  then
                SCHEDULED=$SCHEDULED" x |"; 
            else
                SCHEDULED=$SCHEDULED"   |"; 
            fi                                            
            if [[ "$PROJTAGS" =~ "sat" ]]; then
                SCHEDULED=$SCHEDULED" x |"; 
            else
                SCHEDULED=$SCHEDULED"   |"; 
            fi                                           
            if [[ "$PROJTAGS" =~ "sun" ]];  then
                SCHEDULED=$SCHEDULED" x |"; 
            else
                SCHEDULED=$SCHEDULED"   |"; 
            fi             
            if [[ "$PROJTAGS" =~ $DAYOFWEEK ]];  then
